<div class="index">
  <%= render template: "_list_head" %>

  <ul class="list-items">
    <% @items.each do |item| %>
      <% attendance = @attendances.find { |at| at.user_id == item.id } %>
      <li class="list-item">
        <div class="info">
          <%= link_to item.name, gws_gkan_admin_user_attendance_settings_path(user_id: item), class: "title" %>
          <div class="meta">
            #<span class="id"><%= item.uid %></span>
            <span class="group"><%= item.gws_main_group(@cur_site).try { |group| group.trailing_name } %></span>
            <span class="attendance"><%= attendance ? attendance.name : "設定なし" %></span>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<%= paginate @items if @items.try(:current_page) %>
