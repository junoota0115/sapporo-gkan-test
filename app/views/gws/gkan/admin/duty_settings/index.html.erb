<% @index_title = proc do |item| %>
  <% title = item.long_name %>
  <%= link_to title, { action: :show, id: item }, class: "title" %>
<% end %>

<% @index_meta = proc do |item| %>
  <span class="id">[<%= item.code %>]</span>
  <span class="employee-type"><%= item.label :employee_type %></span>
  <span class="datetime"><%= ss_time_tag item.updated %></span>
  <span class="order"><%= item.order %></span>
<% end %>

<%= render template: "gws/crud/index" %>
